<h1>Articles</h1>

<ul>
  <% @articles.each do |article| %>
    <li>
      <%= link_to article.title, article, class: "plain-link grey-text" %>
      <span class="article-date">
        <%= article.created_at.to_date %>
      </span>
    </li>
  <% end %>
</ul>

<%= link_to 'New Article', new_article_path, class: "plain-link new-link" %>
